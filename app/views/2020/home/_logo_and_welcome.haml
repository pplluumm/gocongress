%div.egc-logo
  = link_to year_path do
    - f = "logo/usgc/2020e.png"
    - if image_file?(f)
      = image_tag "logo/usgc/2020e.png"
  #donate
    #donate-logo
      = image_tag "sponsors/aga.jpg"
    %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post"}
      %input{:type => "hidden", :name => "cmd", :value => "_s-xclick"}
      %input{:type => "hidden", :name => "hosted_button_id", :value => "EMDGU3QUWMB66"}
      %input{:type => "image", :src => "https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif", :border => "0", :name => "submit", :alt => "PayPal - The safer, easier way to pay online!"}
      %img{:class => "graphic", :alt => "", :border => "0", :src => "https://www.paypal.com/en_US/i/scr/pixel.gif", :width => "1", :height => "1"}
    #donate-logo
      = image_tag "sponsors/AGF-logo-small.gif"
